{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["node_modules/**", "**/dist/**"],
    "maxSize": 3670016
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {},
      "suspicious": {
        "noExplicitAny": "off",
        "noAssignInExpressions": "off",
        "noApproximativeNumericConstant": "off",
        "noCommentText": "off",
        "noConsoleLog": "off",
        "noDebugger": "off",
        "noDoubleEquals": "off",
        "noDuplicateObjectKeys": "off",
        "noGlobalIsFinite": "off",
        "noGlobalIsNan": "off",
        "noMisrefactoredShorthandAssign": "off",
        "noSparseArray": "off",
        "noUnsafeNegation": "off",
        "useIsArray": "off",
        "useValidTypeof": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      },
      "style": {
        "useNumberNamespace": "off",
        "useNumericLiterals": "off",
        "useSelfClosingElements": "off",
        "useShorthandArrayType": "off",
        "useShorthandAssign": "off",
        "useSingleCaseStatement": "off",
        "useSingleVarDeclarator": "off",
        "useTemplate": "off"
      },
      "nursery": {
        "noConsole": "off",
        "noFocusedTests": "off",
        "noSkippedTests": "off",
        "noUselessTernary": "off",
        "useSortedClasses": "off"
      }
    }
  }
}
