.description
  font-size 16px
  color var(--sand_700)

  & a
    color var(--primary_link)
    text-decoration underline
    &:hover
      text-decoration none

  &_size
    &_small
      font-size 12px

    &_medium
      font-size 16px

    &_large
      font-size 22px

  &:not(&_noOffset)&_size
    &_small
      margin 16px 0

    &_medium
      margin 32px 0

    &_large
      margin 40px 0
